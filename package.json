{
  "name": "leozera-ui",
  "version": "0.2.0",
  "description": "My experimental React UI library",
  "repository": "git@github.com:leonardofaria/leozera-ui.git",
  "author": "Leonardo Faria <leonardofaria@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn storybook",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o docs",
    "deploy:github": "gh-pages -d docs",
    "deploy": "yarn storybook:build && yarn deploy:github",
    "lint:js": "eslint lib",
    "build:lib": "yarn build:webpack && yarn build:js && yarn build:css && yarn build:copy-files",
    "build:webpack": "NODE_ENV=production webpack",
    "build:js": "cross-env NODE_ENV=production babel lib/components -d dist --ignore '**/*.spec.js,**/*.stories.js'",
    "build:css": "echo 'Pending CSS build'",
    "build:copy-files": "node scripts/copyBuildFiles.js",
    "publish": "yarn version && yarn build:lib && npm publish dist"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@storybook/addon-centered": "^3.2.15",
    "@storybook/addon-info": "^3.2.15",
    "@storybook/addon-knobs": "^3.2.15",
    "@storybook/addon-options": "^3.2.15",
    "@storybook/addons": "^3.2.15",
    "@storybook/react": "^3.2.15",
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-docgen": "^1.8.1",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-display-name": "^6.25.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-react": "^7.4.0",
    "gh-pages": "^1.0.0",
    "node-sass": "^4.6.1",
    "postcss-loader": "^2.0.8",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "resolve-url-loader": "^2.2.0",
    "sass-lint": "^1.12.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.9.1"
  }
}
